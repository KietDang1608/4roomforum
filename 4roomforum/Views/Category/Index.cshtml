@{
    ViewData["Title"] = "Chuyên mục";
    var categories = ViewBag.Categories as IEnumerable<_4roomforum.DTOs.CategoryDTO>;
    var hotCategories = ViewBag.HotCategories as IEnumerable<_4roomforum.DTOs.CategoryViewDTO>;
    int i  = 1;
}

<div class="container mt-5">
    <div class="row">
        <!-- Hot Categories Sidebar -->
        <div class="col-md-3">
            <h2 class="text-center text-primary">Chuyên mục Hot</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage2))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage2</div>
}
            <ul class="list-group">
                @foreach (var category in hotCategories)
                {
                    @if (i ++ > 4){
                    break;
                    }
                <li class="list-group-item list-group-item-action bg-light">
                    <a href="#" class="list-group-item list-group-item-action bg-light">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@category.CategoryName</h5>
                        <small>@category.ViewCount lượt views</small>
                    </div>
                </a>
                </li>
                }
            </ul>
        </div>

        <!-- Clickable Categories Main Content -->
        <div class="col-md-9">
            <h2 class="text-center text-success">Danh sách Chuyên mục</h2>
            <div class="list-group">
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}                @foreach (var category in categories)
                {
                <a href="#" class="list-group-item list-group-item-action bg-light">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@category.CategoryName</h5>
                        <small>@category.CreatedDate</small>
                    </div>
                    <p class="mb-1">@category.Description</p>
                    <small>Được tạo bởi: User1</small>
                </a>
                }
            </div>
        </div>
    </div>
</div>
