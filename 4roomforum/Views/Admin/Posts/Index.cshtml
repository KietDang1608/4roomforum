@{
    Layout = "_AdminLayout";
    var listPostDetails = ViewBag.ListPostDetails as IEnumerable<_4roomforum.DTOs.PostDetailDTO>;
}

<form class="form-inline my-2 my-lg-0" method="get" action="/Admin/Posts/Index">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchTerm">
    
    <select>
        <option value="thread" selected>Thread ID</option>
        <option value="username">User</option>
        <option value="post_title">Post Title</option>
        <option value="post_content">Post Content</option>
    </select>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>
<div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Thread Id</th>
                    <th scope="col">Post Id</th>
                    <th scope="col">PostBy</th>
                    <th scope="col">PostTitle</th>
                </tr>
            </thead>
            <tbody> @foreach (var post in listPostDetails)
                {
                    <tr>
                        <td>@post.ThreadId</td>
                        <td>@post.PostId</td>
                        <td>@post.Author.UserName</td>
                        <td>@post.Content</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Index" asp-controller="Reply" asp-route-PostId="@post.PostId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


