@model List<_4roomforum.Models.Category>
@{
    ViewData["Title"] = "Category";
    Layout = "_AdminLayout";
}
<h1>@ViewBag.Message</h1>
<div class="container mt-5">
    <div class="row mb-3">
        <div class="col">
            <h2>Category Management</h2>
        </div>
        <div class="col text-end">
            <a class="btn btn-primary" href="@Url.Action("CreateCategory", "AdminCategories")">Add Category</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">CategoryName</th>
                    <th scope="col">Description</th>
                    <th scope="col">CreatedBy</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row">@category.CategoryId</th>
                        <td>@category.CategoryName</td>
                        <td>@category.Description</td>
                        <td>@category.CreatedBy</td>
                        <td>@category.CreatedDate</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("UppdateCategory", "AdminCategories", new { id = category.CategoryId })">Edit</a>
                           
                            <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteCategory", "AdminCategories", new { id = category.CategoryId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
