@{
    ViewData["Title"] = "Home";
    var categories = ViewBag.Categories as IEnumerable<_4roomforum.DTOs.CategoryDTO>;
        int countCategories = 1;
}

<div class="container mt-5">
    <!-- General Introduction Section -->
    <div class="jumbotron text-center bg-light p-5" style="background-image: url('/imgs/wallpaper.jpg'); background-size: cover; background-position: center;">
        <h1 class="display-4 text-white">Welcome to _4roomforum</h1>
        <p class="lead text-white">A place to discuss and share your thoughts on various topics.</p>
    </div>

    <!-- Prompt to Log In -->
    <div class="alert alert-info text-center mt-4">
        <h4>Hãy đăng nhập để tạo bài viết và tham gia cộng đồng của chúng tôi</h4>
        <a href="#" class="btn btn-primary">Đăng nhập</a>
        <a href="#" class="btn btn-secondary">Đăng ký</a>
    </div>

    <div class="row mt-4">
        <!-- Categories Sidebar -->
        <div class="col-md-3">
            <h2 class="text-center text-primary">Các chuyên mục</h2>
            <ul class="list-group">
                @foreach (var category in categories)
                {
                    if (countCategories++ > 4)
                    {
                        break;
                    }
                    <a href="#" class="list-group-item list-group-item-action bg-light"><li class="list-group-item">@category.CategoryName</li></a>
                }
                
            </ul>
            <a asp-action="Index" asp-controller="Category" class="list-group-item list-group-item-action bg-light">Xem thêm ...</a>
        </div>

        <!-- Topics Main Content -->
        <div class="col-md-6">
            <h2 class="text-center text-success">Top Chủ Đề</h2>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action bg-light">
                    <h5 class="mb-1">Topic 1</h5>
                    <p class="mb-1">Description of Topic 1</p>
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-light">
                    <h5 class="mb-1">Topic 2</h5>
                    <p class="mb-1">Description of Topic 2</p>
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-light">
                    <h5 class="mb-1">Topic 3</h5>
                    <p class="mb-1">Description of Topic 3</p>
                </a>
            </div>
        </div>

        <!-- Top Posts Sidebar -->
        <div class="col-md-3">
            <h2 class="text-center text-danger">Top Bài Viết</h2>
            <ul class="list-group">
                <a href="#" class="list-group-item list-group-item-action bg-light"><li class="list-group-item">Bài viết 1</li></a>
                <a href="#" class="list-group-item list-group-item-action bg-light"><li class="list-group-item">Bài viết 2</li></a>
                <a href="#" class="list-group-item list-group-item-action bg-light"><li class="list-group-item">Bài viết 3</li></a>
                <a href="#" class="list-group-item list-group-item-action bg-light"><li class="list-group-item">Bài viết 4</li></a>
            </ul>
        </div>
    </div>
</div>
